<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/photo_holder_margin">

    <com.hap.xyzreader.widget.PhotoDraweeView
        android:id="@+id/photo_drawee_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/photo_holder_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/photo_drawee_view"
        android:layout_gravity="bottom"
        android:alpha="0.8"
        android:background="@android:color/black"
        android:orientation="vertical"
        android:padding="@dimen/photo_holder_info_padding">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/article_title"
            style="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="0.9"
            android:maxLines="1"
            android:paddingBottom="@dimen/photo_holder_title_padding"
            android:textColor="@android:color/white"
            android:textSize="@dimen/photo_holder_title_size"
            android:textStyle="bold" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/article_byline"
            style="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/colorByLine" />
    </LinearLayout>

</RelativeLayout>